@model List<Student>

@{
    ViewData["Title"] = "Students";
}

<div class="container">
    <div class="row">
        <div class="col-6 md">
            <a class="btn btn-warning btn-lg" asp-action="Add">
                <i class="bi bi-plus-circle"> Add Student</i>
            </a>
        </div>
    </div>
    <br />
    <div class="row">
        <table class="table table-bordered text-center">
            <thead>
                <tr>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Birthdate</th>
                    <th>National ID</th>
                    <th>Phone Number</th>
                    <th>Operations</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Student std in Model)
                {
                    <tr>
                        <td>@std.FullName</td>
                        <td>@std.Email</td>
                        <td>@std.BirthDate.ToShortDateString()</td>
                        <td>@std.NID</td>
                        <td>@std.PhoneNumber</td>
                        <td>
                            <a class="btn btn-info me-4" asp-action="Details" asp-route-id="@std.Id">
                                <i class="bi bi-info-lg"></i>
                            </a>
                            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@std.Id">
                                <i class="bi bi-pencil-fill"></i>
                            </a>
                            <a href="#" class="btn btn-danger delete-btn" data-id="@std.Id" data-bs-toggle="modal" data-bs-target="#deleteModal">
                                <i class="bi bi-trash3-fill"></i>
                            </a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


<partial name="_ConfirmDeletionModalPartialView"></partial>


@section Scripts {
    <script src="~/js/confirm-student-delete.js"></script>
}