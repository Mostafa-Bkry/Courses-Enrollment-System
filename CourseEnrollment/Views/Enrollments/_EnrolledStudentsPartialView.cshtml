@model StudentsPerSelectedCourseVM


<table class="table table-bordered text-center">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Birthdate</th>
            <th>National ID</th>
            <th>Phone Number</th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Student std in Model.CrsStudents)
        {
            <tr>
                <td>@std.FullName</td>
                <td>@std.Email</td>
                <td>@std.BirthDate.ToShortDateString()</td>
                <td>@std.NID</td>
                <td>@std.PhoneNumber</td>
                <td>
                    <a href="#" class="btn btn-danger delete-btn" onclick="GetCrsandStd(@Model.CrsId, @std.Id)" data-bs-toggle="modal" data-bs-target="#deleteModal">
                        <i class="bi bi-trash3-fill"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>


<partial name="_ConfirmDeletionModalPartialView"></partial>
