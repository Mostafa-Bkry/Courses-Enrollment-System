
@{
    ViewData["Title"] = "Home";
}


<div class="container text-center">
    <div class="row">
        <div>
            <h1>Educate</h1>
            <span style="color: #848784">' Let's manage your system '</span>
        </div>
    </div>
    <div class="row">
        <br />
        <br />
    </div>
    <div class="row">
        <div class="col">
            <div class="card" style="width: 18rem;">
                <img src="/assets/images/Courses.jpeg" class="card-img-top" alt="...">
